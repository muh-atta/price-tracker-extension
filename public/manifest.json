{
  "manifest_version": 3,
  "name": "Price Monitor",
  "version": "1.0",
  "description": "Track price drops",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
  "storage",
  "alarms",
  "notifications",
  "tabs",
  "activeTab"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
  "default_popup": "index.html"
 },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    { "resources": ["icon.png"], "matches": ["<all_urls>"] }
  ]
}
